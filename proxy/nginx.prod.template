server {
    listen 443 ssl;

    server_name scr4m.ugo-ii.com;
    ssl_certificate /cert/fullchain.pem;
    ssl_certificate_key /cert/privkey.pem;
    
    location / {
        root /var/www/html/client;
        index index.html;
    }

    location /api/ {
        proxy_pass http://server:3000/;
    }
}
